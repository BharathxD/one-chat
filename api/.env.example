# Example .env file for the Axum API
# Copy this to .env and fill in your actual values

# Server Configuration
RUST_LOG="api=debug,tower_http=debug"
SERVER_PORT=3001

# Database (MongoDB)
DATABASE_URL="mongodb://localhost:27017/myapp_db" # Replace with your MongoDB connection string

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key" # Replace with a strong, random secret
JWT_EXPIRATION_HOURS=24

# Redis
REDIS_URL="redis://127.0.0.1/"

# AI Service API Keys (if the backend handles AI calls)
# OPENAI_API_KEY="your-openai-api-key"
# OPENROUTER_API_KEY="your-openrouter-api-key"
